<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:helpers="using:PonsCognitiveServices.Helpers"
      x:Class="PonsCognitiveServices.MainPage"
      mc:Ignorable="d"
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <StackPanel>
        <TextBlock Text="PONS + Microsoft Cognitive Services"/>
        <Button Content="Get" Command="{Binding GetRestRequestCommand}"/>
        <TextBox Text="{Binding WebAddress}" TextWrapping="Wrap"/>
        <WebView helpers:MyExtensions.HTML="{Binding WebAddress}"  Height="500"/>
    </StackPanel>
</Page>
